{
    "api_url": {
        "description": "【必需】生图 API 的请求地址",
        "type": "string",
        "hint": "这是提供AI绘画服务的核心接口地址。默认已填入柏拉图AI的地址。",
        "default": "https://api.bltcy.ai/v1/chat/completions"
    },
    "api_keys": {
        "description": "【必需】生图 API 密钥列表",
        "type": "list",
        "hint": "您的API密钥，是使用服务的凭证。可以填写多个，插件会在请求失败时自动轮换，非常可靠。推荐使用 /生图添加key 命令管理。",
        "items": {
            "type": "string",
            "description": "API 密钥"
        },
        "default": []
    },
    "prefix": {
        "description": "【重要】指令必须使用前缀 (如 /)",
        "type": "bool",
        "hint": "强烈建议开启！可以有效避免在日常聊天中误触绘画指令，例如无意中说出“手办化”三个字。",
        "default": true
    },
    "use_proxy": {
        "description": "启用网络代理",
        "type": "bool",
        "hint": "如果您的服务器无法直接连接到上面的API地址（例如服务器在内地），请务必开启此项。",
        "default": false
    },
    "proxy_url": {
        "description": "网络代理地址",
        "type": "string",
        "hint": "仅在“启用网络代理”开启时生效。格式为 http://user:pass@host:port，例如 http://127.0.0.1:7890",
        "default": ""
    },
    "user_whitelist": {
        "description": "【权限】用户白名单 (QQ号)",
        "type": "list",
        "hint": "留空则对所有用户开放。填写后，只有列表中的用户才能使用本插件（机器人主人除外）。",
        "items": {
            "type": "string",
            "description": "用户QQ号"
        },
        "default": []
    },
    "user_blacklist": {
        "description": "【权限】用户黑名单 (QQ号)",
        "type": "list",
        "hint": "黑名单优先级最高。列表中的用户将无法使用本插件（机器人主人除外）。",
        "items": {
            "type": "string",
            "description": "用户QQ号"
        },
        "default": []
    },
    "group_whitelist": {
        "description": "【权限】群聊白名单 (群号)",
        "type": "list",
        "hint": "留空则在所有群聊中可用。填写后，插件只会在列表中的群聊生效。",
        "items": {
            "type": "string",
            "description": "群号"
        },
        "default": []
    },
    "group_blacklist": {
        "description": "【权限】群聊黑名单 (群号)",
        "type": "list",
        "hint": "黑名单优先级最高。插件将不会在列表中的群聊生效。",
        "items": {
            "type": "string",
            "description": "群号"
        },
        "default": []
    },
    "enable_user_limit": {
        "description": "【次数限制】启用【个人】次数限制",
        "type": "bool",
        "hint": "为每个非管理员用户独立计算和限制使用次数。",
        "default": true
    },
    "enable_group_limit": {
        "description": "【次数限制】启用【群组】次数限制",
        "type": "bool",
        "hint": "为每个群聊设置一个共享的使用次数池。当群聊次数存在时，会优先消耗群聊次数。",
        "default": false
    },
